- if notice
  .alert.alert-success.alert-dismissible.fade.show{role: 'alert'}
    = notice
    %button.btn-close{type: 'button', 'data-bs-dismiss': 'alert', 'aria-label': 'Close'}

- if alert
  .alert.alert-danger.alert-dismissible.fade.show{role: 'alert'}
    = alert
    %button.btn-close{type: 'button', 'data-bs-dismiss': 'alert', 'aria-label': 'Close'}

.text-center.fst-italic
  %h1
    The fight between 
    = @fight.gladiators.map(&:name).join(', ')

.d-flex.justify-content-center
  = link_to 'Back to fights list', fights_path, class: 'btn btn-secondary'

.d-flex.justify-content-center.flex-column.flex-md-row
  -  @fight.gladiators.each do |gladiator|
    .mx-2.my-4
      = render partial: 'gladiators/presentation_panel', locals: { gladiator:, show_actions: false, show_avatar: true }

.text-center.fst-italic
  %h2 Fight details

.d-flex.justify-content-center.flex-column.mb-5
  = render partial: 'fight_details', locals: { fight: @fight, show_actions: true }
  = render partial: 'fight_tools', locals: { tool_list_by_gladiators: @tool_list_by_gladiators }